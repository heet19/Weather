<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/todayDetailFC"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    android:animateLayoutChanges="true"
    app:cardBackgroundColor="#FCAE73"
    app:cardCornerRadius="10dp"
    app:cardElevation="30dp">

    <LinearLayout
        android:id="@+id/todayTimeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/todayDTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="17:30"
                android:textColor="#303346"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/todayDTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="35°"
                android:textStyle="bold"
                android:textColor="#303346"
                android:textSize="14sp" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/todayDIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/sunny" />

            <ImageView
                android:id="@+id/expandHDetail"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:src="@drawable/baseline_expand_more_24" />

        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="5dp"
            app:dividerColor="#FDE1CB" />

            <TextView
                android:id="@+id/todayDFDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:text="Sunny"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="#303346"
                android:textSize="16sp" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/dividerBelowDescription"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:visibility="gone"
                app:dividerColor="#FDE1CB" />

            <GridLayout
                android:id="@+id/gridLayoutMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:visibility="gone"
                android:columnCount="2"
                android:rowCount="4">

                <LinearLayout
                    android:id="@+id/gridLTDF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:src="@drawable/feels_like"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Feels Like"
                            android:textColor="#303346"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/todayDFFeelsLike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="27°"
                            android:textStyle="bold"
                            android:textColor="#303346"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:src="@drawable/wind_speed"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wind"
                            android:textColor="#303346"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/todayDFWindDeg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="336°"
                            android:textStyle="bold"
                            android:textColor="#303346"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/todayDFWindSpeed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="16 km/h"
                            android:textStyle="bold"
                            android:textColor="#303346"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:src="@drawable/humiditys"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Humidity"
                            android:textColor="#303346"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/todayDFHumidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="16%"
                            android:textStyle="bold"
                            android:textColor="#303346"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:src="@drawable/visibility"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Visibility"
                            android:textColor="#303346"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/todayDFVisibility"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="16 km"
                            android:textStyle="bold"
                            android:textColor="#303346"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:src="@drawable/more_cloud"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cloud Cover"
                            android:textColor="#303346"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/todayDFCloud"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4%"
                            android:textStyle="bold"
                            android:textColor="#303346"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:src="@drawable/precipitation_rain"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Probability of precipitation (0-1)"
                            android:maxLines="2"
                            android:textColor="#303346"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/todayDFPop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.2"
                            android:textStyle="bold"
                            android:textColor="#303346"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:src="@drawable/temperature_icon"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Temperature"
                            android:maxLines="2"
                            android:textColor="#303346"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/todayDFTemperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25° / 35°"
                            android:textStyle="bold"
                            android:textColor="#303346"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:src="@drawable/sea_level"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sea Level"
                            android:maxLines="2"
                            android:textColor="#303346"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/todayDFSeaLevel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1025 hPa"
                            android:textStyle="bold"
                            android:textColor="#303346"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

            </GridLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>