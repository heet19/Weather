<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/todayImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/sunny"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/todayTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="4 pm"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/todayImage"
        app:layout_constraintStart_toStartOf="@+id/todayImage"
        app:layout_constraintTop_toBottomOf="@+id/todayImage" />

    <TextView
        android:id="@+id/todayTempDegree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="32"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/todayTime"
        app:layout_constraintStart_toStartOf="@+id/todayTime"
        app:layout_constraintTop_toBottomOf="@+id/todayTime" />

</androidx.constraintlayout.widget.ConstraintLayout>